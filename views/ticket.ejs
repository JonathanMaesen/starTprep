<%- include('./partials/head') %>

  <body class="home">
    <%- include('./partials/nav') %>

      <button id="deleteButton" class="delete-button">üóëÔ∏è Delete Selected</button>

      <div class="ticket">
        <div class="ticket-container">
          <% tickets.forEach(ticket=> { %>
            <div class="ticket-card" data-tafel-id="<%= ticket.tafel %>">
              <p><strong>Tafel:</strong> <span>
                  <%= ticket.tafel %>
                </span></p>
              <p><strong>Uur:</strong> <span>
                  <%= ticket.uur %>
                </span></p>

              <% ticket.gerechten.forEach(gerecht=> { %>
                <div class="gerecht-blok">
                  <p><strong>Gerecht:</strong> <span>
                      <%= gerecht.titel %>
                    </span></p>
                  <p><strong>Commentaar:</strong> <span>
                      <%= gerecht.commentaar || 'Geen' %>
                    </span></p>
                </div>
                <% }) %>
            </div>
            <% }); %>
        </div>
      </div>

      <%- include('./partials/footer') %>
        <script type="module" src="/scripts/ticket.js" defer></script>
  </body>