<%- include('./partials/head') %>
<script type="module" src="scripts/recipes.js" defer></script>

  <body class="recipes">
    <script src="scripts/nav.js"></script>

    <!-- Topbar -->
    <section class="topbar">
      <select name="filterOptions" id="filterOptions">
        <option value="default">FILTER</option>
      </select>

      <button id="addButtonTop">+</button>
    </section>

    <!-- Grid -->
    <section class="grid-container" id="gridContainer">
      <article class="grid-item">Recipe1</article>
      <article class="grid-item">Recipe2</article>
      <article class="grid-item">Recipe3</article>
    </section>

    <!-- Popup -->
    <section class="popup-overlay" id="popupOverlay">
      <article class="popup-content">
        <span class="close-btn" id="closePopup">&times;</span>

        <main class="recipe-info">
          <section class="search-container">
            <input type="text" id="searchInput" placeholder="Zoek naar een gerecht..." />
            <article id="searchResults" class="dropdown"></article>
          </section>

          <section class="recipe-name-box">
            <label>Gerechtsnaam:</label>
            <span id="recipeName"></span>
          </section>

          <section class="ingredients-preparation">
            <article class="info-box ingredienten-box">
              <label>IngrediÃ«ntenLijst:</label>
              <ul id="ingredientenList"></ul>

              <article class="plusmin-box">
                <button id="minusBtn">-</button>
                <span id="quantity">1</span>
                <button id="plusBtn">+</button>
              </article>
            </article>

            <article class="info-box">
              <label>Bereidingswijze:</label>
              <ol id="bereidingswijzeList"></ol>
            </article>
          </section>

          <section class="price-container">
            <article class="price-box">
              <label>AankoopPrijs:</label>
              <span id="aankoopPrijs"></span>
            </article>
            <article class="price-box">
              <label>VerkoopPrijs:</label>
              <span id="verkoopPrijs"></span>
            </article>
          </section>
        </main>
      </article>
    </section>
  </body>
